<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#021529"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- Título de la app -->
    <TextView
        android:id="@+id/titleApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME VAULT"
        android:textSize="32sp"
        android:textColor="#F1F5F9"
        android:textStyle="bold"
        android:layout_marginBottom="48dp"
        android:fontFamily="monospace" />

    <!-- Campo de usuario -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#333333"
        android:textColor="#ffffff"
        android:textColorHint="#888888"
        android:hint="Ingresa tu usuario"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:inputType="text" />

    <!-- Campo de contraseña con botón para mostrar/ocultar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña:"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp">

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#333333"
            android:textColor="#ffffff"
            android:textColorHint="#888888"
            android:hint="Ingresa tu contraseña"
            android:padding="16dp"
            android:inputType="textPassword"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="48dp" />

        <ImageButton
            android:id="@+id/btnTogglePassword"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_gravity="end|center_vertical"
            android:background="#333333"
            android:contentDescription="Mostrar u ocultar contraseña"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_view" />
    </FrameLayout>


    <!-- Botón de Login -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="INICIAR SESIÓN"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:backgroundTint="#444444"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />

    <!-- Botón de Registro -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="REGISTRARSE"
        android:textColor="#000000"
        android:textStyle="bold"
        android:backgroundTint="#6B7280"
        android:textSize="16sp" />

    <!-- Mensaje informativo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Si es tu primera vez, usa 'REGISTRARSE'"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginTop="24dp"
        android:gravity="center" />

</LinearLayout>