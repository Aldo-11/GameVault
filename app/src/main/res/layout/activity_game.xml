<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <!-- Header del juego -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#03223F"
        android:padding="16dp">

        <!-- Título del juego -->
        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Juego"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Información del jugador -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jugador: Usuario"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/gameScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntos: 0"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/maxScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Récord: 0"
                android:textSize="16sp"
                android:textColor="#FFD700" />
        </LinearLayout>

    </LinearLayout>

    <!-- Área principal del juego -->
    <FrameLayout
        android:id="@+id/gameArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1a1a1a"
        android:padding="8dp">

        <!-- Aquí se cargarán dinámicamente los elementos de cada juego -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando juego..."
            android:textSize="18sp"
            android:textColor="#888888"
            android:layout_gravity="center" />

    </FrameLayout>

    <!-- Botones de control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#03223F"
        android:padding="16dp">

        <!-- Botón Reiniciar -->
        <Button
            android:id="@+id/btnRestart"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="REINICIAR"
            android:textColor="#000000"
            android:textStyle="bold"
            android:backgroundTint="#6B7280"
            android:layout_marginEnd="8dp" />

        <!-- Botón Volver al Menú -->
        <Button
            android:id="@+id/btnBackToMenu"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="MENÚ"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:backgroundTint="#444444"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>